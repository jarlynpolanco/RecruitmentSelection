@model IEnumerable<RecruitmentSelection.UI.Models.Training>

@{
    ViewData["Title"] = "Index";
}

<h1>Entrenamientos</h1>

<p>
    <a asp-action="TrainingsCreate" asp-route-id="@ViewData["CandidateID"]">Crear Nuevo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InitialDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Institution)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Level)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InitialDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Institution)
                </td>
                <td>
                    <a asp-action="TrainingsDelete" asp-route-candidateId="@item.CandidateID" asp-route-trainingId="@item.ID">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
