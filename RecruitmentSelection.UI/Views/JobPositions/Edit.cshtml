@model RecruitmentSelection.UI.Models.JobPosition

@{
    ViewData["Title"] = "Edit";
}

<h1>Edición</h1>

<h4>Vacantes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Risk" class="control-label"></label>
                <select asp-for="Risk" class="form-control">
                    <option value="Alto">Alto</option>
                    <option value="Medio">Medio</option>
                    <option value="Bajo">Bajo</option>
                </select>
                <span asp-validation-for="Risk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinimumSalary" class="control-label"></label>
                <input asp-for="MinimumSalary" class="form-control" />
                <span asp-validation-for="MinimumSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaximumSalary" class="control-label"></label>
                <input asp-for="MaximumSalary" class="form-control" />
                <span asp-validation-for="MaximumSalary" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
